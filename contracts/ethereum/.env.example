# Ethereum Deployment Configuration
# Copy this file to .env and fill in your values

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Ethereum private key for Sepolia deployment (without 0x prefix)
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here

# Live Testnet Demo Configuration
ETH_PRIVATE_KEY=your_ethereum_private_key_here

# RPC URLs
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# NEAR Testnet Configuration for Live Demo
NEAR_CONTRACT_ID=fusion-plus-near.demo.cuteharbor3573.testnet
NEAR_ACCOUNT_ID=demo.cuteharbor3573.testnet
NEAR_KEY_PATH=/Users/yourusername/.near-credentials/testnet/demo.cuteharbor3573.testnet.json

# Demo Parameters (optional overrides)
DEMO_USDC_AMOUNT=100000000  # 100 USDC (6 decimals)
DEMO_NEAR_AMOUNT=2000000000000000000  # 2 NEAR (18 decimals)
DEMO_RESOLVER_FEE=1000000  # 1 USDC resolver fee

# Alternative RPC providers:
# Alchemy: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# QuickNode: https://your-endpoint.quicknode.pro/
# Ankr: https://rpc.ankr.com/eth_sepolia